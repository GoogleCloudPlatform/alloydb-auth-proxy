{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignorePresets": [":semanticPrefixFixDepsChoreOthers"],
  "packageRules": [
    {
      "description": "Group all dependencies for Java sample",
      "matchPaths": ["examples/java/**"],
      "groupName": "Java sample dependencies",
      "schedule" : ["every weekday"]
    },
    {
      "description": "Group all dependencies for Node.js sample",
      "matchPaths": ["examples/nodejs/**"],
      "groupName": "Node.js sample dependencies",
      "schedule" : ["every weekday"]
    },
    {
      "description": "Group all dependencies for Go sample",
      "matchPaths": ["examples/Go/**"],
      "groupName": "Go sample dependencies",
      "schedule" : ["every weekday"]
    },
    {
      "description": "Group all dependencies for Python sample",
      "matchPaths": ["examples/python/**"],
      "groupName": "Python sample dependencies",
      "schedule" : ["every weekday"]
    },
  ],
  "prConcurrentLimit": 0,
  "rebaseStalePrs": true,
  "dependencyDashboard": true,
  "semanticCommits": true,
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
