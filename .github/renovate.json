{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignorePresets": [":semanticPrefixFixDepsChoreOthers"],
  "prConcurrentLimit": 0,
  "rebaseStalePrs": true,
  "dependencyDashboard": true,
  "semanticCommits": true,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
     {
       "matchPackagePatterns": [".*"],
       "addLabels": ["automerge"]
     }
  ],
  "schedule": [
    "after 8am on Friday",
    "before 12pm on Friday"
  ]
}
